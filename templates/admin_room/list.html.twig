{% extends 'content_base.html.twig' %}

{% block content_body %}
    <div class="row">
        <div class="col-sm-12 pt-3">
            <div>
                <a href="{{ path('admin_room_new') }}" class="btn btn-primary">Add New Record</a>
            </div>
        </div>
    </div>
    {% if rooms  %}
        <h2 class="overview-headline">All Available Room</h2>
    {% else %}
        <h2 class="overview-headline">No Room Added</h2>
    {% endif %}
    <table class="table">
        <thead>
        <tr>
            <th>SI.No</th>
            <th>Room Name</th>
            <th>Actions<th>
        </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td>1</td>
                <td>{{ room.roomName }}</td>
                <td>
                    <button>
                        <a href="{{ path('admin_room_edit',{
                            id:room.id
                        }) }}" style="color:green">
                            Edit
                        </a>
                    </button>
                    <button>
                        <a href="{{ path('admin_room_delete',{
                            id:room.id
                        }) }}" style="color:red">
                            Delete
                        </a>
                    </button>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
