{% extends 'content_base.html.twig' %}

{% block content_body %}
    <div class="row">
        <div class="col-sm-12 pt-3">
            <div>
                <a href="{{ path('admin_heater_new') }}" class="btn btn-primary">Add New Record</a>
            </div>
        </div>
    </div>

    {% if heaters  %}
        <h2 class="overview-headline">All Available Heater</h2>
    {% else %}
        <h2 class="overview-headline">No Heater Added</h2>
    {% endif %}
    <table class="table">
        <thead>
        <tr>
            <th>SI.No</th>
            <th>Room Name</th>
            <th>Heater No</th>
            <th>Actions<th>
        </tr>
        </thead>
        <tbody>
        {% for heater in heaters %}
        <tr>
            <td>1</td>
            <td>{{ heater.room }}</td>
            <td>{{ heater.heaterNumber }}</td>
            <td>
                <button>
                    <a href="{{ path('admin_heater_edit',{
                        id:heater.id
                    })}}" style="color:green">
                        Edit
                    </a>
                </button>
                <button>
                    <a href="{{ path('admin_heater_delete',{
                        id:heater.id
                    })}}" style="color:red">
                        Delete
                    </a>
                </button>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
